<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="14dp">

        <LinearLayout
            android:id="@+id/detailBtn"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginTop = "40dp">

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/reviewPhoto"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                app:siSquare="true"
                android:src="@drawable/hear_fill_red" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:layout_marginRight="20dp" >

                <TextView
                    android:id="@+id/reviewerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="@color/colorPrimary"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>
                <RatingBar
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:id="@+id/reviewRating"
                    android:gravity="center_horizontal"
                    android:focusableInTouchMode="false"
                    android:isIndicator="true"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:layout_marginLeft="18dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_column="1"
                    android:rating="5"/>
                <TextView
                    android:id="@+id/reviewTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2017-12-03 04:57:52"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>
                <TextView
                    android:id="@+id/reviewComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I wills willswillswillswills wills wills wills wills wills wills wills wills wills wills wills wills wills wills wills wills wills wills wills wills wills wills"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    
</android.support.v7.widget.CardView>

</LinearLayout>